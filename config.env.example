# Instagram API (opcjonalne - można też używać instaloader)
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token_here

# WeatherEyes Configuration
# Skopiuj ten plik jako .env i wypełnij swoimi API keys

# ===== OPENAI VISION API =====
# Pobierz z: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# ===== TELEGRAM BOT =====
# 1. Stwórz bota: https://t.me/@BotFather
# 2. Skopiuj token
# 3. Dodaj bota do grupy lub napisz do niego
# 4. Pobierz chat_id: https://api.telegram.org/bot<TOKEN>/getUpdates
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# ===== TWILIO SMS =====
# Pobierz z: https://console.twilio.com/
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_FROM_NUMBER=+1234567890  # Numer Twilio
TWILIO_TO_NUMBER=+48123456789   # Twój numer telefonu

# ===== WEATHER API (opcjonalne) =====
# Pobierz z: https://openweathermap.org/api
OPENWEATHER_API_KEY=your_openweather_key

# ===== DEMO SETTINGS =====
# Ustaw na 'true' aby używać demo mode nawet z API keys
FORCE_DEMO_MODE=false

# ===== EVENT SETTINGS =====
EVENT_NAME=SHAMAN 2024
EVENT_LOCATION=Poland
EVENT_TIMEZONE=Europe/Warsaw

# Event tracking
DEFAULT_HASHTAGS=#szama2024,#hackathon,#warsaw,#event

# AI Model settings
MODEL_NAME=microsoft/resnet-50
CONFIDENCE_THRESHOLD=0.7

# Scraping settings
SCRAPE_INTERVAL_MINUTES=5
MAX_POSTS_PER_SCRAPE=20

# Dashboard
STREAMLIT_PORT=8501
API_PORT=8000 